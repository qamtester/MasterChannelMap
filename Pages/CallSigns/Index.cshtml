@page
@model MasterChannelMap.Pages.CallSigns.IndexModel

@{
    ViewData["Title"] = "Call Signs";
}

<h1>Call Signs</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CallSign[0].CallLetters)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallSign[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallSign[0].ChannelListingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CallSign[0].Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CallSign) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CallLetters)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChannelListingID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
